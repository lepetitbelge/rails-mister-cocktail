<h2><%= @cocktail.name %></h2>
<p><%= link_to 'edit cocktail', edit_cocktail_path(@cocktail) %></p>

<% if @cocktail.photo.file.nil? %>
  <%= cl_image_tag("o74or5oeyfz0l7cp7gdp", width: 400, height: 300, crop: :pad) %>
<% else %>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :pad %>
<% end %>

  <% @doses.each do |dose| %>
    <li>
      <%= dose.description %> of <strong><%= dose.ingredient.name %></strong> | <%= link_to 'delete dose', dose, method: :delete, data: {confirm: 'Are you sure?'} %>
    </li>
  <% end %>


<p><%= link_to 'add a dose', new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to 'back to main list', cocktails_path  %></p>

